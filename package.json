{
  "name": "etceter4",
  "version": "1.0.0",
  "description": "home of the soul.",
  "keywords": [
    "art",
    "website",
    "music",
    "static-site",
    "creative",
    "portfolio"
  ],
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "index.html",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.40.0",
    "browser-sync": "^3.0.3",
    "eslint": "^9.14.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "dev": "browser-sync start --server --files '*.html, css/*.css, js/*.js' --port 3000",
    "lint": "eslint js/main.js js/page.js js/pageData.js js/images.js js/diary.js js/ogod.js js/analytics.js js/config.js",
    "lint:fix": "eslint js/main.js js/page.js js/pageData.js js/images.js js/diary.js js/ogod.js js/analytics.js js/config.js --fix",
    "format": "prettier --write '**/*.{js,css,html,md}'",
    "format:check": "prettier --check '**/*.{js,css,html,md}'",
    "validate": "npm run lint && npm run format:check",
    "validate:package-lock": "node scripts/validate-package-lock.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4-b100m/etceter4.git"
  },
  "author": "et ceter4",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/4-b100m/etceter4/issues"
  },
  "homepage": "https://github.com/4-b100m/etceter4#readme"
}
